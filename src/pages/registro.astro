---
import Footer from "../components/footer.astro"
import 	CardTitulo from '../components/cardTitulo.astro'
import CancelarButton from '../components/CancelarButton.astro'
---

<html lang="es">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Registrarse - Manrubio</title>
      <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-black text-white">
    <main class="min-h-screen flex flex-col items-center p-4">
      <CardTitulo />
      <div class="border-4 border-blue-400 bg-blue-800 bg-opacity-25 rounded-lg max-w-md w-full p-4 mt-6 mb-6">
        <h1 class="text-2xl font-bold text-center text-blue-500 mb-6">REGISTRARSE</h1>
        <form>
          <div class="mb-4">
            <label for="nombre" class="block text-sm font-semibold mb-2 text-white-700 ">Nombre</label>
            <input type="text" id="nombre" name="nombre" class="w-full p-3 rounded bg-transparent border-2 border-blue-400 text-white placeholder-gray-400 focus:outline-none focus:border-blue-300" placeholder="Ingrese Nombre de ususario"/>
          </div>
          <div class="mb-4">
            <label for="email" class="block text-sm font-semibold mb-2 text-white-700 ">Email</label>
            <input type="email" id="email" name="email" class="w-full p-3 rounded bg-transparent border-2 border-blue-400 text-white placeholder-gray-400 focus:outline-none focus:border-blue-300" placeholder="Ingrese correo electrónico"/>
          </div>
          <div class="mb-4">
            <label for="password" class="block text-sm font-semibold mb-2 text-white-700 ">Contraseña</label>
            <input type="password" id="password" name="password" class="w-full p-3 rounded bg-transparent border-2 border-blue-400 text-white placeholder-gray-400 focus:outline-none focus:border-blue-300" placeholder="Ingrese contraseña"/>
          </div>
          <div class="flex justify-center space-x-4 gap-4">
            <button type="submit" class="border-2 border-blue-400 text-blue-500 py-1 px-2 sm:px-4 sm:py-2 rounded hover:bg-blue-700 transition">
              Registrarse
            </button>
            <CancelarButton text="Cancelar" href="/login"/>
          </div>
        </form>
      </div>  
    </main>
    <Footer />
  </body>
  </html>
  