---
// LoginForm.astro
import InputField from './InputField.astro';
import SubmitButton from './SubmitButton.astro';
import RegisterButton from './RegisterButton.astro';
---

<div class="border-4 border-blue-400 bg-blue-800 bg-opacity-25 text-white p-8 rounded-lg max-w-md w-full shadow-lg mt-10">
    
    <h2 class="text-2xl font-bold text-center text-blue-500 mb-6">INICIAR SESIÓN</h2>
    <form>
        <InputField label="Correo Electrónico" id="email" type="email" placeholder="ingresar correo electronico" />
        <InputField label="Contraseña" id="password" type="password" placeholder="ingresar contraseña" />
        <div class="flex justify-between mt-4">
            <SubmitButton text="Ingresar" />
            <RegisterButton text="Registrarse" />
        </div>
    </form>
</div>
